{
    "title": "Tool Details",
    "description": "Information about a tool onboarded to FIT",
    "type": "object", 
    "properties": {
        "active_development": {
            "description": "If the source code is actively developed",
            "type": "boolean"
        },
        "tool_name": {
            "description": "The full name of the tool",
            "type": "string"
        },
        "tool_abbreviation": {"type": "string"},
        "authors": {"type": "string"},
        "noaa_internal": {"type": "boolean"},
        "maintainer_name": {"type": "string"},
        "maintainer_email": {"type": "string"},
        "background_text": {"type": "string"},
        "citation": {"type": "string"},
        "references": {
            "type": "array", 
            "items": {"type": "string"}
        },
        "associated_tools":{
            "type": "array", 
            "items": {
               "type": "object", 
               "properties" : {
                  "name": {"type": "string"},
                  "link": {"type": "string"}
               }
            }
        },
        "user_organizations": {
            "type": "array", 
            "items": {
            "type": "string"
            }
        },
        "online_app_link": {"type": "string"},
        "executable_link": {"type": "string"},
        "website_link": {"type": "string"},
        "documentation_link": {"type": "string"},
        "source_code_link": {"type": "string"},
        "pdf_download_link": {"type": "string"},
        "software_badges": {
            "type" : "array",
            "items": {
              "type": "string"
            }
        },
        "toolbox_drawers": {
            "type": "array", 
            "items": {
            "type": "string"
            }
        },
        "keywords": {
            "type": "array", 
            "items": {
            "type": "string"
            },
            "minItems": 5,
            "uniqueItems": true
        },
        "uses_github_releases": {"type":"boolean"},
        "static_version_number": {"type": "string"},
        "release_badge": {"type": "string"}
    },
    "required": [
        "active_development",
        "tool_name",
        "tool_abbreviation",
        "authors",
        "noaa_internal",
        "maintainer_name",
        "maintainer_email",
        "background_text",
        "toolbox_drawers", 
        "keywords",
        "uses_github_releases"
    ]
}